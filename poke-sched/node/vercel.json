{
  "functions": {
    "api/server.js": {
      "runtime": "nodejs20.x",
      "includeFiles": [
        "index.html",
        "public/**",
        "config/**",
        "controller/**",
        "routes/**"
      ]
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/server.js" },
    { "source": "/(.*)", "destination": "/api/server.js" }
  ]
}